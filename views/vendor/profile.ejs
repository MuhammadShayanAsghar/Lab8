<%- include ('../partials/header1') %>

<div class="container-fluid">
    <div class="row mt-2 ml-2"> 
        <h3>Welcome <span style="color:#00a36d;"><%=vendor.username%></span></h3>
    </div>
    <hr>
    <div class="row ml-2">
        <div class="col-12">
            <h6><i class="far fa-envelope"></i> <%=vendor.email%></h6>
            <h6><i class="fas fa-phone"></i> <%=vendor.contactNo%></h6>
            <h6><i class="fas fa-map-marker-alt"></i> <%=vendor.address%></h6>
            <p><%=vendor.description%></p>
        </div> 
    </div>
    <hr>
     <h2>Services</h2>
     <hr>
        <% vendor.services.forEach(function(service){ %>
            <div class="row">
                <div class="col-12 col-lg-3">
                    <div class="card-body ">
                        <h6 class="card-title"><i class="fas fa-tags"></i> <%= service.price %> </h6>
                        <h6 class="card-title"><i class="fab fa-servicestack"></i> <%= service.type %> </h6>
                        <h6 class="card-title"><i class="fas fa-map-marker-alt"></i> <%= service.city %> </h6>
                        <hr>
                        <p class="card-text"><%= service.description %> </p>
                    </div>
                </div>
                <div class="col-12 col-lg-9">
                    <div class="row">
                        <div class="col-12 col-md-4 p-1">
                            <img class="card-img-top" src="<%=service.image[0] %>" style="max-height: 35vh;">
                        </div>
                        <div class="col-12 col-md-4 p-1">
                            <img class="card-img-top" src="<%=service.image[1] %>" style="max-height: 35vh;">
                        </div>
                        <div class="col-12 col-md-4 p-1">
                            <img class="card-img-top" src="<%=service.image[2] %>" style="max-height: 35vh;">
                        </div>
                    </div>
                </div>
            </div>  
            <hr> 
        <% }); %>
</div>

<%- include ('../partials/footer0') %>